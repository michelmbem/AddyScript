<Window x:Class="AddyScript.Gui.OptionDialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        Width="550"
        Height="475"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        Icon="/Assets/Images/Icons/AddyScript.ico">
  <Grid RowDefinitions="*, Auto" Margin="5">
    <TabControl Grid.Row="0">
        <TabItem Header="General">
            <StackPanel Margin="0,5,0,0" Background="{DynamicResource EditorBackground}">
                <HeaderedContentControl Header="Editor" Margin="10,5">
                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *, Auto">
						<TextBlock Grid.Row="0" Grid.Column="0" Text="Font face :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Name="EditorFontFaceTextBox" Margin="5, 3"/>
						<TextBlock Grid.Row="1" Grid.Column="0" Text="Font size :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="EditorFontSizeTextBox" Margin="5, 3"/>
                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal"> 
						    <TextBlock Text="Word wrap :" VerticalAlignment="Center"/>
                            <CheckBox Name="EditorWordWrapCheckBox" Margin="5, 3, 0, 3"/>
                        </StackPanel>
                    </Grid>
                </HeaderedContentControl>
                <HeaderedContentControl Header="Terminal" Margin="10,5">
                    <Grid ColumnDefinitions="Auto, *, Auto, *">
                        <RadioButton Grid.Column="0" Name="NativeTerminalRadioButton" Margin="5, 3"/>
						<TextBlock Grid.Column="1" Text="Use native terminal" VerticalAlignment="Center"/>
                        <RadioButton Grid.Column="2" Name="EmulatedTerminalRadioButton" Margin="5, 3"/>
						<TextBlock Grid.Column="3" Text="Use emulated terminal" VerticalAlignment="Center"/>
                    </Grid>
                </HeaderedContentControl>
                <HeaderedContentControl Header="Emulated terminal" Margin="10,5">
                    <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *, Auto, *">
						<TextBlock Grid.Row="0" Grid.Column="0" Text="Foreground :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="TerminalForegroundTextBox" Margin="5, 3"/>
						<TextBlock Grid.Row="0" Grid.Column="2" Text="Background :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="3" Name="TerminalBackgroundTextBox" Margin="5, 3"/>
						<TextBlock Grid.Row="1" Grid.Column="0" Text="Font face :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Name="TerminalFontFaceTextBox" Margin="5, 3"/>
						<TextBlock Grid.Row="2" Grid.Column="0" Text="Font size :" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="TerminalFontSizeTextBox" Margin="5, 3"/>
                        <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right"> 
						    <TextBlock Text="Word wrap :" VerticalAlignment="Center"/>
                            <CheckBox Name="TerminalWordWrapCheckBox" Margin="5, 3, 0, 3"/>
                        </StackPanel>
                    </Grid>
                </HeaderedContentControl>
            </StackPanel>
        </TabItem>
      <TabItem Header="Search Paths">
        <DockPanel Margin="0,5,0,0">
          <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto, *, Auto, Auto">
            <Label Grid.Column="0" Content="New directory :" VerticalAlignment="Center" />
            <TextBox Name="NewDirectoryTextBox" Grid.Column="1" Margin="0,0,1,0" />
            <Button Name="BrowseDirectoryButton"
                    Grid.Column="2"
                    i:Attached.Icon="fa-folder-open"
                    VerticalAlignment="Stretch"
                    ToolTip.Tip="Browse for a directory"
                    Click="BrowseDirectoryButtonClick" />
            <Button Name="AddDirectoryButton"
                    Grid.Column="3"
                    i:Attached.Icon="fa-circle-plus"
                    VerticalAlignment="Stretch"
                    ToolTip.Tip="Add to list"
                    Click="AddDirectoryButtonClick" />
          </Grid>
          <ListBox Name="SearchPathsListBox" Margin="0,10,0,0">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <DockPanel>
                  <Button i:Attached.Icon="fa-circle-minus"
                          DockPanel.Dock="Right"
                          ToolTip.Tip="Remove from list"
                          Click="RemoveDirectoryButtonClick" />
                  <TextBlock Text="{Binding}"
                             VerticalAlignment="Center"
                             ToolTip.Tip="{Binding}" />
                </DockPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </DockPanel>
      </TabItem>
      <TabItem Header="References">
        <DockPanel Margin="0,5,0,0">
          <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto, *, Auto, Auto">
            <Label Grid.Column="0" Content="New reference :" VerticalAlignment="Center" />
            <TextBox Name="NewReferenceTextBox" Grid.Column="1" Margin="0,0,1,0" />
            <Button Name="BrowseAssemblyButton"
                    Grid.Column="2"
                    i:Attached.Icon="fa-folder-open"
                    VerticalAlignment="Stretch"
                    ToolTip.Tip="Browse for an assembly"
                    Click="BrowseAssemblyButtonClick" />
            <Button Name="AddReferenceButton"
                    Grid.Column="3"
                    i:Attached.Icon="fa-circle-plus"
                    VerticalAlignment="Stretch"
                    ToolTip.Tip="Add to list"
                    Click="AddReferenceButtonClick" />
          </Grid>
          <ListBox Name="ReferencesListBox" Margin="0,10,0,0">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <DockPanel>
                  <Button i:Attached.Icon="fa-circle-minus"
                          DockPanel.Dock="Right"
                          ToolTip.Tip="Remove from list"
                          Click="RemoveReferenceButtonClick" />
                  <TextBlock Text="{Binding}"
                             VerticalAlignment="Center"
                             ToolTip.Tip="{Binding}" />
                </DockPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </DockPanel>
      </TabItem>
    </TabControl>
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                FlowDirection="RightToLeft"
                Margin="5, 10, 10, 5">
      <Button Name="CancelButton"
              Content="Cancel"
              Width="100"
              HorizontalContentAlignment="Center"
              Margin="0, 0, 5, 0"
              Click="CancelButtonClick" />
      <Button Name="OkButton"
              Content="OK"
              Width="100"
              HorizontalContentAlignment="Center"
              Click="OkButtonClick" />
    </StackPanel>
  </Grid>
</Window>