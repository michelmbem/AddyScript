<Window x:Class="AddyScript.Gui.AboutBox"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500"
        Height="275"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        Icon="/Assets/Images/Icons/AddyScript.ico">
  <Grid RowDefinitions="Auto, *">
    <Border Grid.Row="0" Height="100">
      <Border.Background>
        <ImageBrush Source="Assets/Images/Backgrounds/AddyScript.jpg" Stretch="Uniform" />
      </Border.Background>
    </Border>
    <Grid Grid.Row="1" RowDefinitions="Auto, *, Auto, Auto" Margin="20">
      <TextBlock Grid.Row="0" Name="VersionTextBlock" />
      <StackPanel  Grid.Row="1" VerticalAlignment="Center">
        <TextBlock Name="DescriptionTextBlock" />
        <HyperlinkButton Click="HyperlinkButtonClick">View on GitHub</HyperlinkButton>
      </StackPanel>
      <TextBlock Grid.Row="2" Name="CopyrightTextBlock" />
      <StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft">
        <Button Name="OkButton"
                Content="OK"
                IsDefault="True"
                Width="100"
                HorizontalContentAlignment="Center"
                Click="OkButtonClick" />
      </StackPanel>
    </Grid>
  </Grid>
</Window>