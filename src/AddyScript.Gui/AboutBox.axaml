<Window
        x:Class="AddyScript.Gui.AboutBox"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About AddyScript"
        Width="500"
        Height="300"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  <Grid RowDefinitions="Auto, *, Auto">
    <StackPanel Grid.Row="0" Margin="10">
      <TextBlock TextAlignment="Center" FontSize="72" FontWeight="Bold">
        AddyScript
      </TextBlock>
      <TextBlock TextAlignment="Center">
        A scripting engine for the .Net platform
      </TextBlock>
    </StackPanel>
    <Grid Grid.Row="1" ColumnDefinitions="Auto, *">
      <Image Grid.Column="0"
             Source="Assets/Images/Icons/AddyScript.png"
             Margin="10"
             Width="128"
             Height="128"/>
      <StackPanel Grid.Column="1">
        <TextBlock>Version 0.9.9.9</TextBlock>
        <TextBlock>Â© Addy 2009-2024</TextBlock>
      </StackPanel>
    </Grid>
    <StackPanel
      Grid.Row="2"
      Margin="5,0"
      FlowDirection="RightToLeft"
      Orientation="Horizontal">
      <Button
        Name="OkButton"
        Width="80"
        Margin="5"
        HorizontalContentAlignment="Center"
        Click="OkButtonClick"
        Content="OK" />
    </StackPanel>
  </Grid>
</Window>