function sum(vector)
{
	total = 0;
	foreach (item in vector)
		total += item;
	return total;
}

function minimum(vector)
{
	mini = MAXFLOAT;
	foreach (item in vector)
		if (item < mini)
			mini = item;
	return mini;
}

function maximum(vector)
{
	maxi = MINFLOAT;
	foreach (item in vector)
		if (item > maxi)
			maxi = item;
	return maxi;
}

