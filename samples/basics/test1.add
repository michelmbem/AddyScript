function stats(vector)
{
	var total = 0,
		minimum = MAXFLOAT,
		maximum = MINFLOAT;
	
	foreach (item in vector)
	{
		total += item;
		if (item < minimum) minimum = item;
		if (item > maximum) maximum = item;
	}
	
	return (total, minimum, maximum);
}

t = [];
n = (int)readln("how many items? ");

if (n <= 0)
	println("goodbye!");
else
{
	for (i = 1; i <= n; i++)
	{
		item = (float)readln("item no. " + i + ": ");
		t.add(item);
	}
	
	(sum, minimum, maximum) = stats(t);
	println("you entered: " + t);
	println("the sum of items is: " + sum);
	println("the minimum is: " + minimum);
	println("the maximum is: " + maximum);
	println("the averrage is: " + (sum / n));
}

