function stats(vector)
{
	var total = 0,
		total2 = 0,
		minimum = MAXFLOAT,
		maximum = MINFLOAT;
	
	foreach (item in vector)
	{
		total += item;
		total2 += item ** 2;
		if (item < minimum) minimum = item;
		if (item > maximum) maximum = item;
	}
	
	return (total, total2, minimum, maximum);
}

t = [];
n = (int)readln("how many items? ");

if (n <= 0)
	println("goodbye!");
else
{
	for (i = 1; i <= n; i++)
	{
		item = (float)readln($"item #{i}: ");
		t.add(item);
	}
	
	(sum, squares, minimum, maximum) = stats(t);
	average = sum / n;
	stdDev = sqrt(squares / n - average ** 2);
	
	println($"you entered: {t}");
	println($"the sum of items is: {sum}");
	println($"the minimum is: {minimum}");
	println($"the maximum is: {maximum}");
	println($"the average is: {average}");
	println($"the standard deviation is: {stdDev}");
}

readln();